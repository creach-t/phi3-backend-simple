# Port du serveur
PORT=3000

# Environnement (development, production)
NODE_ENV=development

# Secret JWT (générer une clé sécurisée pour la production)
JWT_SECRET=votre-super-secret-jwt-key-tres-securisee

# Durée de validité du token JWT (en secondes)
JWT_EXPIRES_IN=86400

# Base de données SQLite
DB_PATH=./database.sqlite

# Configuration CORS
CORS_ORIGIN=http://localhost:3001

# Configuration Phi-3 et llama.cpp
LLAMA_CPP_PATH=/path/to/llama.cpp/main
PHI3_MAX_TOKENS=2048
PHI3_TEMPERATURE=0.7

# Limites de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100